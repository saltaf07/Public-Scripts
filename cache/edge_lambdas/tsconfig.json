{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts"]
}
